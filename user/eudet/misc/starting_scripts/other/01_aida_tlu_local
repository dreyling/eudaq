# Define host nane
# in the standard telescope network setups HOSTNAME should be set to 192.168.22.1
HOSTNAME=localhost 
#HOSTNAME=127.0.0.1
RPCPORT=44000

# Start Run Control
xterm -T "Run Control" -e "euRun" &
sleep 2

# Start Logger
xterm -T "Log Collector" -e "euLog -r tcp://${HOSTNAME}" &
sleep 1

# Start TLU Producer
xterm -T "AidaTluProducer" -e "euCliProducer -n AidaTluProducer -t aida_tlu -r tcp://${HOSTNAME}:${RPCPORT}" & 

# Start one DataCollector
# name (-t) in conf file
# or: -n TriggerIDSyncDataCollecor
xterm -T "Data Collector TLU" -e "euCliCollector -n DirectSaveDataCollector -t tlu_dc -r tcp://${HOSTNAME}:${RPCPORT}" &
